{
  "name": "learn-elysia",
  "description": "Learning Elysia.js and Bun.js",
  "version": "0.0.8",
  "module": "dist/server.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun build src/server.ts --compile --minify-whitespace --minify-syntax --sourcemap --target bun --outfile ./dist/server",
    "db:generate": "bunx --bun drizzle-kit --config drizzle.config.ts generate",
    "db:migrate": "bunx --bun drizzle-kit --config drizzle.config.ts migrate",
    "db:studio": "bunx --bun drizzle-kit --config drizzle.config.ts studio --port 4000",
    "dev": "bun run --watch src/server.ts",
    "dev:debug": "bun run --inspect=ws://localhost:6499 src/server.ts",
    "format": "biome format --write",
    "lint": "biome check",
    "postinstall": "if [ -z \"$CI\" ]; then simple-git-hooks; fi",
    "release": "bunx commit-and-tag-version -s",
    "start": "bun dist/server.js",
    "test:debug": "bun --inspect=ws://localhost:6499 test",
    "test:load": "set -a && if [ -f .env.local ]; then . .env.local; else . .env; fi && set +a && k6 run scripts/throughput.ts"
  },
  "dependencies": {
    "@elysiajs/openapi": "^1.4.14",
    "@elysiajs/static": "^1.4.7",
    "better-auth": "^1.4.18",
    "commander": "^14.0.2",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^1.0.0-beta.13-f728631",
    "drizzle-typebox": "^1.0.0-beta.13-f728631",
    "elysia": "^1.4.22",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@tsconfig/bun": "^1.0.10",
    "@types/bun": "1.3.3",
    "@types/k6": "^1.5.0",
    "@types/node": "24.9.1",
    "drizzle-kit": "^1.0.0-beta.13-f728631",
    "lint-staged": "^16.2.7",
    "openapi-types": "^12.1.3",
    "pg": "^8.18.0",
    "simple-git-hooks": "^2.13.1"
  },
  "peerDependencies": {
    "@sinclair/typebox": "^0.34.41",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged --allow-empty"
  },
  "lint-staged": {
    ".github/**/*.yml": [
      "biome format --write --no-errors-on-unmatched"
    ],
    "{database,src,test}/**/*.ts": [
      "biome format --write --no-errors-on-unmatched"
    ],
    "*.{ts,json,jsonc}": [
      "biome format --write --no-errors-on-unmatched"
    ]
  }
}
